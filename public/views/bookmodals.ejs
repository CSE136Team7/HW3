<%if(books){ books.forEach(function(book){%>
<div id= <%= "updateModal"+book.book_ID %> class="modalDialog">
  <div class="grid grid-pad">
    <a href="#close" title="Close" class="close x-button">x</a>
    <div class="tabs is-centered">
      <ul>
        <li id="add-bookmark" class="is-active"><a>Update Bookmark</a></li>
      </ul>
    </div>
    <form method='post' action='/bookmarks/update' id=<%="update-bookmark-form"+book.book_ID%>>
        <div class='form'>
        <input type="hidden" name="user_ID" value=<%= book.user_ID %>>
        <input type="hidden" name="book_ID" value=<%= book.book_ID %>>
        <input type="text" name="title" placeholder="Title" value=<%= book.Title %>>
        <div class="textFieldWrapper">
          <input type="url" name="url" required pattern="https?://.+" placeholder="http://www.example.com" value=<%= book.URL %>>
        </div>
        <div class="textFieldWrapper">
          <input type="text" name="description" placeholder="Description" value=<%= book.Description %>>
        </div>
        <div class="buttonWrapper" style="margin-bottom:15px">
          <!-- <input type="submit" id="hide-submit-btn" style="visibility:hidden" value="Save"> -->
          <button><i class="fa fa-check-circle fa-lg" id="trigger-submit">Save</i></button>
        </div>
      </div>
    </form>
  </div>
</div>
<% });}; %>
